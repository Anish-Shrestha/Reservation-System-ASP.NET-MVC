@{
    ViewBag.Title = "Search Page";
}
@model ReservationSystem.Web.ViewModels.SearchViewModel

@using (Html.BeginForm("Index", "Home", null, FormMethod.Post, new { @class = "form", @id = "form" }))
{
    <br />
    <div class="container">
        <div class="row">

            <div class="col-md-3"></div>
            <div class="col-md-6"> 
                <label class="success" id="SuccessMessageLabl"></label>
                <br />
                <div class="clearfix"></div>
                @Html.ValidationSummary()
                <br />
                <div class="clearfix"></div>
                <br />
                <p id="DataText" class="validation">
                </p>
            </div>
            <div class="col-md-3"></div>
            <div class="clearfix"></div>
            <br />
            <div class="col-md-2">
            </div>
            <div class="col-md-8">

                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-addon" id="sizing-addon2"><strong>@Html.LabelFor(x => x.Location)</strong></span>
                        @Html.TextBoxFor(m => m.Location, new { @class = "form-control typeahead", @id = "Location" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div id="loading">
                        <p>
                            <img class="loadingImage" src="~/Content/Image/ajax-loader.gif" />
                            Loading...
                        </p>

                    </div>
                </div>
                <div class="clearfix"></div>
                <br />
                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-addon" id="sizing-addon3"><strong>@Html.LabelFor(x => x.CheckIn)</strong></span>
                        @Html.TextBoxFor(m => m.CheckIn, new { @class = "form-control", @id = "CheckIn", autocomplete = "off" })

                    </div>
                </div>
                <div class="col-md-6"></div>
                <div class="clearfix"></div>
                <br />
                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-addon" id="sizing-addon4"><strong>@Html.LabelFor(x => x.CheckOut)</strong></span>
                        @Html.TextBoxFor(x => x.CheckOut, new { @class = "form-control", @id = "CheckOut", autocomplete = "off" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="col-xs-5 messageContainer"></div>
                </div>
                <div class="clearfix"></div>
                <br />
                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-addon" id="sizing-addon5"><strong>@Html.LabelFor(x => x.Rooms)</strong></span>

                        @Html.DropDownListFor(x => x.Rooms, (IEnumerable<SelectListItem>
                                 )ViewData["RoomList"], null, new { @class = "form-control", @id = "SelectRoomDropdown" })
                    </div>
                </div>
                <div class="col-md-6"></div>
                <div class="clearfix"></div>
                <br />
            </div>
            <div class="col-md-2"></div>
            <div class="clearfix"></div>
            <div id="reservation">
                <div id="SearchPanel">
                    <div class="col-md-2"></div>
                    <div class="col-md-7 well well-sm">
                        <div class="col-md-4">
                            <label class="form-control" id="RoomId">Room 1</label>
                        </div>
                        <div class="col-md-4">
                            <div class="input-group">
                                <span class="input-group-addon"><strong>@Html.LabelFor(x => x.Adult)</strong></span>
                                @Html.DropDownListFor(x => x.Adult, (IEnumerable<SelectListItem>
                             )ViewData["AdultList"], null, new { @class = "form-control", @id = "Adult" })
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="input-group">
                                <span class="input-group-addon"><strong>@Html.LabelFor(x => x.Children)</strong></span>

                                @Html.DropDownListFor(x => x.Children, (IEnumerable<SelectListItem>
                         )ViewData["ChildrenList"], null, new { @class = "form-control", @id = "Children" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3"></div>
                    <div class="clearfix"></div>

                </div>
            </div>
            <div class="col-md-8"></div>
            <div class="col-md-2">
                <input type="submit" id="SubmitButton" class="btn btn-primary" value="Submit" />
            </div>
            <div class="col-md-2"></div>
            <div class="clearfix"></div>
            <br />
            <br />

        </div>
    </div>
}

@section Styles{
    @Styles.Render("~/bundles/searchPageStyle")
}

@section scripts{
    <script>
        var roomsAdultList = '@ViewData["AdultListStateStore"]';
        var roomsChildrenList = '@ViewData["ChildrenListStateStore"]';
        var isValidationError = '@ViewData["hasModelError"]';
        var success = '@TempData["SuccessMessage"]';
    </script>

    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/datepicker")
    @Scripts.Render("~/bundles/typehead")
    @Scripts.Render("~/bundles/searchPage")

}